                                            <th>
                                                @Model.TestCases[j].Status
                                            </th>
                                        </tr>
                                    </thead>
                                </table>*@
                        </a>
                    </h4>
                </div>

                <div id="@Html.Raw("collapseOne"+j)" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="@Html.Raw("headingOne"+j)">
                    <div class="panel-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 col-xs-2">
                                        #
                                    </th>
                                    <th class="col-lg-10 col-xs-8">
                                        Keyword Name
                                    </th>
                                    <th class="col-lg-1 col-xs-2">
                                        Status
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.TestCases[j].Keywords.Count; i++)
                                {
                                    <tr>
                                        <th scope="row">
                                            @(i + 1)
                                        </th>
                                        <td>
                                            @Model.TestCases[j].Keywords[i].Name
                                        </td>
                                        <td>
                                            @Model.TestCases[j].Keywords[i].Status
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</asp:Content>
