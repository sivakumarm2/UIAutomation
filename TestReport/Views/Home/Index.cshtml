    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        @for (int j = 0; j < Model.TestCases.Count; j++)
        {
            <div class="panel panel-default">

                <div class="panel-heading" role="tab" id="@Html.Raw("headingOne"+j)">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="@Html.Raw("#collapseOne"+j)" aria-controls="@Html.Raw("collapseOne"+j)">
                            <div class="row">
                                <div class="col-lg-1 col-xs-2">@Model.TestCases[j].Id</div>
                                <div class="col-lg-10 col-xs-8 text-wrap">@Model.TestCases[j].Descriptioin</div>
                                <div class="col-lg-1 col-xs-2">@Model.TestCases[j].Status</div>
                            </div>
                            @*<table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Model.TestCases[j].Id
                                            </th>
